<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e3e3e3"
            android:padding="4dp"
            android:layout_centerVertical="true"
            android:id="@+id/BillItemLayout">

            <TextView
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:id="@+id/billDate"
                android:layout_weight="0.2"
                android:text="2015-03-24"
                android:foregroundGravity="left"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingRight="10dp"/>

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:id="@+id/billName"
                android:textColor="#222"
                android:text="Recognizing the disparate impact of climate change on women and the efforts of women globally to address climate change."
                android:textSize="12dp"
                android:layout_weight="0.8"
                android:paddingRight="10dp"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:gravity="center_vertical" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>