<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/black"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hamza.prog02.ZipCodeActivity"
    tools:showIn="@layout/zip_code">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/ElectionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Represent"
            android:fontFamily="sans-serif-medium"
            android:textSize="42dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your ZIP code"
            android:textSize="24dp"
            android:id="@+id/ActionText"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:textColor="#dadada"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ElectionText" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/editZip"
            android:layout_marginTop="48dp"
            android:gravity="left"
            android:inputType="number"
            android:fontFamily="sans-serif"
            android:padding="16dp"
            android:textColor="#222"
            android:textAllCaps="false"
            android:background="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_below="@+id/ActionText"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
