<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/black"
    android:largeHeap="true"
    tools:context="com.example.hamza.prog02.MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <TextView
            android:id="@+id/ElectionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Represent"
            android:fontFamily="sans-serif-medium"
            android:textSize="42dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find your congressional representatives"
            android:textSize="18dp"
            android:id="@+id/ActionText"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:textColor="#dadada"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/ElectionText"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="By ZIP Code"
            android:textSize="20dp"
            android:id="@+id/ZipButton"
            android:layout_marginTop="48dp"
            android:gravity="left"
            android:fontFamily="sans-serif"
            android:padding="16dp"
            android:textColor="#222"
            android:textAllCaps="false"
            android:background="#fff"
            android:layout_centerVertical="true"
            android:layout_below="@+id/ActionText"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="By current location"
            android:textSize="20dp"
            android:layout_marginTop="12dp"
            android:textColor="#222"
            android:background="#fff"
            android:fontFamily="sans-serif"
            android:id="@+id/LocationButton"
            android:gravity="left"
            android:padding="16dp"
            android:textAllCaps="false"
            android:layout_centerVertical="true"
            android:layout_below="@+id/ZipButton"
            android:layout_centerHorizontal="true" />


        <com.twitter.sdk.android.core.identity.TwitterLoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/LocationButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp" />


    </RelativeLayout>

</RelativeLayout>
